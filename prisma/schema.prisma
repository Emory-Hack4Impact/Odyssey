generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserMetadata {
  id                String           @id @default(uuid()) @db.Uuid
  is_admin          Boolean          @default(false)
  is_hr             Boolean          @default(false)
  position          String           @default("")
  employeeFirstName String?
  employeeLastName  String?
  TimeOffRequests   TimeOffRequest[]
  Files             Files[]

  evaluationsReceivedMetadata  EmployeeEvaluationMetadata[] @relation("ReviewedEmployeeMetadata")
  evaluationsSubmittedMetadata EmployeeEvaluationMetadata[] @relation("SubmitterMetadata")
}

enum FileTypes {
  AVATAR
  DOCUMENT
  ATTACHMENT
  ANNOUNCEMENT
}

model Files {
  id         String       @id @default(uuid()) @db.Uuid
  userId     String       @db.Uuid
  bucket     String
  path       String
  // type of documents
  type       FileTypes
  uploadedAt DateTime     @default(now())
  // metadata for extra info for files, format: 
  // {
  //   "fileName": string,        // display name in AdminDocuments
  //   "viewers": string[],       // names/emails of allowed viewers
  //   "folderPath": string[]     // e.g. ["Documents", "Onboarding"]
  // }
  metadata   Json?
  owner      UserMetadata @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
}

model TimeOffRequest {
  id             String          @id @default(uuid()) @db.Uuid
  employeeId     String       @db.Uuid
  leaveType      String
  startDate      DateTime
  endDate        DateTime
  comments       String       @default("")
  approved       Boolean      @default(false)
  otherLeaveType String       @default("")
  UserMetadata   UserMetadata @relation(fields: [employeeId], references: [id])
}

model EmployeeEvaluation {
  // evaluation submission id (unique per submission)
  id String @id @default(uuid()) @db.Uuid

  // denormalized snapshot of employee name at time of submission
  // denormalized snapshot of employee name at time of submission (removed â€” use relation)

  strengths     String
  weaknesses    String
  improvements  String
  notes         String
  communication Int
  leadership    Int
  timeliness    Int
  skill1        Int
  skill2        Int
  skill3        Int

  metadata EmployeeEvaluationMetadata?
}

model EmployeeEvaluationMetadata {
  // evaluation submission id (unique per submission)
  id String @id @default(uuid()) @db.Uuid

  evaluationId String             @unique @db.Uuid
  evaluation   EmployeeEvaluation @relation(fields: [evaluationId], references: [id], onDelete: Cascade)

  // reviewed employee (FK to UserMetadata)
  employeeId       String   @db.Uuid
  reviewedEmployee UserMetadata? @relation("ReviewedEmployeeMetadata", fields: [employeeId], references: [id])

  // id of the person who submitted this evaluation (FK to UserMetadata)
  submitterId String  @db.Uuid
  submitter   UserMetadata? @relation("SubmitterMetadata", fields: [submitterId], references: [id])

  year Int

  submittedAt DateTime @default(now())

  // admin approval
  approved   Boolean  @default(false)
  approvedAt DateTime?
  approvedBy String?

  @@index([employeeId])
  @@index([submitterId])
}

model CareerDevArticles {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title      String
  author     String
  blurb      String
  body       String?
  date       DateTime @db.Date
  starttime  DateTime @db.Time(6)
  endtime    DateTime @db.Time(6)
  location   String
  imageurl   String?
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @updatedAt @db.Timestamptz(6)
}
