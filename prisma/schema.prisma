generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserMetadata {
  id              String           @id
  is_admin        Boolean          @default(false)
  is_hr           Boolean          @default(false)
  position        String           @default("")
  employeeFirstName String?
  employeeLastName  String?
  TimeOffRequests TimeOffRequest[]
  Files           Files[]
  Articles        Article[]
  // NOTE: Prisma requires opposite relation fields when a model has multiple relations
  // to the same target model. These two fields are present to satisfy Prisma's
  // relation mapping and are not intended for direct use in app logic.
  // Evaluations this user is the subject of (reviewed employee) — internal relation field
  evaluationsReceivedRelation EmployeeEvaluation[] @relation("ReviewedEmployee")
  // Evaluations submitted by this user — internal relation field
  evaluationsSubmittedRelation EmployeeEvaluation[] @relation("Submitter")

  @@map("UserMetadata")
}

enum FileTypes {
  AVATAR
  DOCUMENT
  ATTACHMENT
  ANNOUNCEMENT
}

model Files {
  id         String       @id @default(dbgenerated("uuid_generate_v1()")) @db.Uuid
  userId     String
  bucket     String
  path       String
  type       FileTypes
  uploadedAt DateTime     @default(now())
  metadata   Json?
  owner      UserMetadata @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
}

model TimeOffRequest {
  id             Int          @id @default(autoincrement())
  employeeId     String
  leaveType      String
  startDate      DateTime
  endDate        DateTime
  comments       String       @default("")
  approved       Boolean      @default(false)
  otherLeaveType String       @default("")
  UserMetadata   UserMetadata @relation(fields: [employeeId], references: [id])
}

model EmployeeEvaluation {
  // evaluation submission id (unique per submission)
  id                String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  // reviewed employee (FK to UserMetadata)
  employeeId         String?
  reviewedEmployee   UserMetadata? @relation("ReviewedEmployee", fields: [employeeId], references: [id])

  // id of the person who submitted this evaluation (FK to UserMetadata)
  submitterId       String?
  submitter         UserMetadata? @relation("Submitter", fields: [submitterId], references: [id])

  // denormalized snapshot of employee name at time of submission
  // denormalized snapshot of employee name at time of submission (removed — use relation)

  year              Int
  strengths         String
  weaknesses        String
  improvements      String
  notes             String
  communication     Int
  leadership        Int
  timeliness        Int
  skill1            Int
  skill2            Int
  skill3            Int

  submittedAt       DateTime      @default(now())

  @@index([employeeId])
  @@index([submitterId])
}

model Article {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  title       String
  content     String   // Markdown content
  blurb       String?  // Short description/preview
  imageUrls   String[] @default([]) // Array of image URLs from Supabase storage
  authorId    String
  author      UserMetadata @relation(fields: [authorId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  published   Boolean  @default(false)

  @@index([authorId])
}
