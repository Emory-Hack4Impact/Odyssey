generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserMetadata {
  id               String           @id
  is_admin         Boolean          @default(false)
  is_hr            Boolean          @default(false)
  position         String           @default("")
  TimeOffRequests  TimeOffRequest[]
  ApprovedRequests TimeOffRequest[] @relation("ApprovedRequests")
  Files            Files[]
  EmployeeEvaluations  EmployeeEvaluation[] @relation("EmployeeEvaluations")
  SubmittedEvaluations EmployeeEvaluation[] @relation("SubmittedEvaluations")
}

enum FileTypes {
  AVATAR
  DOCUMENT
  ATTACHMENT
  ANNOUNCEMENT
}

model Files {
  id         String       @id @default(dbgenerated("uuid_generate_v1()")) @db.Uuid
  userId     String
  owner      UserMetadata @relation(fields: [userId], references: [id], onDelete: Cascade)
  bucket     String
  path       String
  type       FileTypes
  uploadedAt DateTime     @default(now())
  metadata   Json?

  @@index([userId, type])
}

enum RequestStatus {
  PENDING
  APPROVED
  DECLINED
}

model TimeOffRequest {
  id             Int           @id @default(autoincrement())
  employeeId     String
  leaveType      String
  otherLeaveType String        @default("")
  startDate      DateTime
  endDate        DateTime
  comments       String        @default("")
  status         RequestStatus @default(PENDING)
  approvedBy     String?
  requestDate    DateTime      @default(now())
  approvedDate   DateTime?
  UserMetadata   UserMetadata  @relation(fields: [employeeId], references: [id])
  Approver       UserMetadata? @relation("ApprovedRequests", fields: [approvedBy], references: [id])

  @@index([status])
  @@index([employeeId, status])
}

model EmployeeEvaluation {
  id           String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  employeeId   String?
  submitterId  String?
  year         Int
  strengths    String
  weaknesses   String
  improvements String
  notes        String
  submittedAt  DateTime      @default(now())
  communication Int
  leadership    Int
  timeliness    Int
  skill1        Int
  skill2        Int
  skill3        Int
  Employee      UserMetadata? @relation("EmployeeEvaluations", fields: [employeeId], references: [id], onDelete: SetNull, onUpdate: Cascade)
  Submitter     UserMetadata? @relation("SubmittedEvaluations", fields: [submitterId], references: [id], onDelete: SetNull, onUpdate: Cascade)

  @@index([employeeId], name: "EmployeeEvaluation_employeeId_idx")
  @@index([submitterId], name: "EmployeeEvaluation_submitterId_idx")
}
