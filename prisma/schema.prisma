generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserMetadata {
  id              String           @id
  is_admin        Boolean          @default(false)
  is_hr           Boolean          @default(false)
  position        String           @default("")
  TimeOffRequests TimeOffRequest[]
  Files           Files[]
}

enum FileTypes {
  AVATAR
  DOCUMENT
  ATTACHMENT
  ANNOUNCEMENT
}

model Files {
  id         String       @id @default(dbgenerated("uuid_generate_v1()")) @db.Uuid
  userId     String
  owner      UserMetadata @relation(fields: [userId], references: [id], onDelete: Cascade)
  bucket     String
  path       String
  type       FileTypes
  uploadedAt DateTime     @default(now())
  metadata   Json?

  @@index([userId, type])
}

model TimeOffRequest {
  id             Int          @id @default(autoincrement())
  employeeId     String
  leaveType      String
  otherLeaveType String       @default("")
  startDate      DateTime
  endDate        DateTime
  comments       String       @default("")
  UserMetadata   UserMetadata @relation(fields: [employeeId], references: [id])
}
